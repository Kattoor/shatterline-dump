{
  "compilerOptions":
  {
    "outFile": "build/build.js",
    "module": "amd",
    "target": "ES2020",
    "sourceMap": true,
    "allowJs": true,
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },
  
  "compileOnSave": true,
  
  "include": [ "src/**/*" ]
}