        {"name": "item", "type": "Control", "view_path": "wrapper.itemWrapper", "visible": false},
        {"name": "item_image", "type": "Image", "view_path": "wrapper.itemWrapper.item"},
        {"name": "item_rarity", "type": "Label", "view_path": "wrapper.itemWrapper.rarity"},
        {"name": "discount_marker", "type": "Component", "view_path": "wrapper.itemWrapper.marker", "visible": false},
        
        {"name": "description", "type": "Label", "view_path": "wrapper.descriptionContainer.description"},

        {"name": "initial_price_1", "type": "Label", "view_path": "wrapper.priceContainer.priceWrapper.oldPrice1", "visible": false},
