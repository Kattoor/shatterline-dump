{
    "name": "meta_stats",
    "doc": "Origin: game session. Emitter: dedicated server.",
    "type": "record",
    "fields": [
        {
            "name": "ts",
            "type": "string",
            "default": "",
            "doc": "ISO8601 UTC timestamp of the event invocation"
        },
        {
            "name": "pid",
            "type": "long",
            "default": 0,
            "doc": "identifier of a player"
        },
        {
            "name": "stat_name",
            "type": "string",
            "doc": "identifier of the resource: task_completed, achievement_earned, soft_currency_earned, hard_currency_earned, profile_experience_earned, etc"
        },
        {
            "name": "stat_value",
            "type": "int",
            "default": 0
        }
    ]
}